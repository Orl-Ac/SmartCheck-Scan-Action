{
  "name": "scan-action",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "checkFormat": "prettier --list-different '**/*.{js,jsx,ts,tsx,html,vue,css,less,scss,graphql,yaml,yml,json,md,mdx}' ",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,html,vue,css,less,scss,graphql,yaml,yml,json,md,mdx}' ",
    "lint": "eslint --ext .js,.ts .",
    "build": "rm -rf build/ && tsc -b tsconfig.json",
    "dev": "ts-node --files index.ts"
  },
  "devDependencies": {
    "@graham42/prettier-config": "^1.3.2",
    "@types/node": "^11.10.5",
    "@types/yargs": "^12.0.9",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "yargs": "^13.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --list-different",
      "eslint --ext .js,.jsx,.ts,.tsx"
    ],
    "*.{json,css,md,html,yaml,yml}": [
      "prettier --list-different"
    ]
  }
}
